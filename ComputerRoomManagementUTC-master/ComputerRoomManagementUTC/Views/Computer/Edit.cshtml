        $("#submit-btn").click(function (event) {
            
            event.preventDefault();
            var dataModel = {
                Name: $("#ComputerName").val(),
                ComputerRoomId: @Model.ComputerId,
                StorageDeviceId: $("#Storage").select2('val'),
                StorageCapacityId: $("#StorageCapacity").select2('val'),
