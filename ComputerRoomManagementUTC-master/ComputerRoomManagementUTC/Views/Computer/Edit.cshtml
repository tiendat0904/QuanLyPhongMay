<div class="main-content">
    <section class="section">
        <h1 class="section-header">
            <div>Manage Computers</div>
        </h1>
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-12">
                                <div class="login-brand">
                                    Edit Computer @Model.PK_Id
                                </div>
                                <div class="card card-primary">
                                    <div class="card-body">
                                        <form id="add-form" class="needs-validation" novalidate="">
                                            @Html.HiddenFor(computer => computer.PK_Id)
                                            <div class="form-group">
                                                <label for="ComputerName">Computer Name</label>
                                                <input id="ComputerName" type="text" class="form-control" name="Name" tabindex="1" autofocus value="@Model.ComputerName">
                                                <span target="ComputerName" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="CpuName">CPU Name</label>
                                                <select id="CpuName" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.CpuId">@Model.CpuName</option>
                                                </select>
                                                <span target="CpuName" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="RamName">Ram Name</label>
                                                <select id="RamName" class="select2" style="width:300px" tabindex="1">
                                                    <option  value="@Model.RamId">@Model.RamName</option>
                                                </select>
                                                <span target="RamName" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="KeyboardName">Keyboard Name</label>
                                                <select id="KeyboardName" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.KeyboarId">@Model.KeyboardName</option>
                                                </select>
                                                <span target="KeyboardName" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="MouseName">Mouse Name</label>
                                                <select id="MouseName" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.MouseId">@Model.MouseName</option>
                                                </select>
                                                <span target="MouseName" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="Monitor">Monitor Name</label>
                                                <select id="Monitor" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.MonitorId">@Model.MonitorName</option>
                                                </select>
                                                <span target="Monitor" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="MonitorSize">Monitor Size Name</label>
                                                <select id="MonitorSize" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.MonitorSizeId">@Model.MonitorSize</option>
                                                </select>
                                                <span target="MonitorSize" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="OpticalDisc">Optical disc Name</label>
                                                <select id="OpticalDisc" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.OpticalDiscId">@Model.OpticalDiscName</option>
                                                </select>
                                                <span target="OpticalDisc" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="Speed">Speed</label>
                                                <select id="Speed" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.SpeedId">@Model.Speed</option>
                                                </select>
                                                <span target="Speed" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="Storage">Storage Name</label>
                                                <select id="Storage" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.StorageDeviceId">@Model.StorageDeviceName</option>
                                                </select>
                                                <span target="Storage" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="StorageCapacity">Storage Capacity Name</label>
                                                <select id="StorageCapacity" class="select2" style="width:300px" tabindex="1">
                                                    <option value="@Model.StorageCapcityId">@Model.StorageCapacity</option>
                                                </select>
                                                <span target="StorageCapacity" class="error"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="Status">
                                                    Computer Status
                                                </label>
                                                <select id="Status" name="Status" class="js-example-basic-single" tabindex="2">
                                                    <option value="1">Active</option>
                                                    <option value="0">Deactive</option>
                                                </select>
                                                <span target="Status" class="error"></span>
                                            </div>
                                            <span target="ErrorMessage" class="error"></span>
                                            <div class="form-group">
                                                <button id="submit-btn" type="submit" class="btn btn-primary btn-block " tabindex="3">
                                                    Submit
                                                </button>
                                                <button id="cancel-btn" on="cancel()" class="btn btn-primary btn-block" tabindex="4">
                                                    Cancel
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>
